<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.sailu.aliendream">

    <uses-permission android:name="android.permission.INTERNET" />

    <uses-feature
        android:name="android.hardware.touchscreen"
        android:required="false" />

    <uses-feature
        android:name="android.software.leanback"
        android:required="false" />

    <application
        android:allowBackup="true"
        android:fullBackupContent="true"
        android:icon="@mipmap/ic_launcher"
        android:installLocation="auto"
        android:label="@string/daydream_name"
        android:supportsRtl="true"
        android:theme="@style/DaydreamTheme"
        android:usesCleartextTraffic="true">

        <activity
            android:name="com.sailu.aliendream.SettingsActivity"
            android:banner="@drawable/ic_banner"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:theme="@style/SettingsTheme">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
                <category android:name="android.intent.category.LEANBACK_LAUNCHER" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>
        </activity>

        <activity
            android:name="com.sailu.aliendream.TestActivity"
            android:configChanges="orientation|keyboardHidden|screenSize"
            android:exported="true" />

        <service
            android:name="com.sailu.aliendream.AlienDream"
            android:exported="true"
            android:label="@string/daydream_name"
            android:permission="android.permission.BIND_DREAM_SERVICE">
            <intent-filter>
                <action android:name="android.service.dreams.DreamService" />
                <category android:name="android.intent.category.DEFAULT" />
            </intent-filter>

            <meta-data
                android:name="android.service.dream"
                android:resource="@xml/aerial_dream" />

        </service>

    </application>

</manifest>
