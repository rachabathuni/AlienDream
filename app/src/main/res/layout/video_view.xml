<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <import type="android.view.View" />

        <variable
            name="showLocation"
            type="boolean" />

        <variable
            name="showClock"
            type="boolean" />

        <variable
            name="showProgress"
            type="boolean" />

        <variable
            name="cacheSize"
            type="int" />

        <variable
            name="controller"
            type="android.widget.MediaController.MediaPlayerControl" />

    </data>

    <FrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <com.sailu.aliendream.ExoPlayerView
            android:id="@+id/video_view"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_gravity="center"
            app:cacheSize="@{cacheSize}" />

        <TextView
            android:id="@+id/location"
            style="@style/VideoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="32dp"
            android:layout_marginStart="48dp"
            android:visibility="@{showLocation ? View.VISIBLE : View.GONE}"
            tools:text="San Francisco" />

        <TextClock
            android:id="@+id/clock"
            style="@style/VideoText"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_gravity="bottom"
            android:layout_marginBottom="32dp"
            android:layout_marginEnd="48dp"
            android:gravity="end"
            android:visibility="@{showClock ? View.VISIBLE : View.GONE}" />

        <com.sailu.aliendream.VideoProgressBar
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:layout_gravity="bottom"
            android:visibility="@{showProgress ? View.VISIBLE : View.GONE}"
            app:controller="@{controller}" />

    </FrameLayout>

</layout>
